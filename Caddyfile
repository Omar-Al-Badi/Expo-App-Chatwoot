# Caddyfile for Chatwoot Chat Widget (Docker)
# Caddy automatically gets SSL certificates from Let's Encrypt

{
    # Add your email for SSL certificate notifications
    email your-email@example.com
}

# Replace 'yourdomain.com' with your actual domain
yourdomain.com {
    # Enable encoding (compression)
    encode gzip

    # Proxy webhook endpoint to backend container
    handle /webhook/* {
        reverse_proxy backend:3001
    }
    
    # Proxy API endpoints to backend container
    handle /api/* {
        reverse_proxy backend:3001 {
            # Preserve headers for SSE (Server-Sent Events)
            header_up Connection {>Connection}
            header_up Upgrade {>Upgrade}
            
            # Add real IP headers
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
            
            # Increase timeouts for long-polling and SSE
            flush_interval -1
        }
    }
    
    # Serve static web frontend files
    root * /var/www/html
    file_server
}

# Optional: Separate subdomain for API
